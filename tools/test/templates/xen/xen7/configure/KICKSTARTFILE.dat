<?xml version="1.0"?>
<installation>
  <primary-disk>sda</primary-disk> 
  <!-- Uncomment the next line if you have a second harddisk
    <guest-disk>sdb</guest-disk>
  -->
   <keymap>us</keymap> 
   <root-password>secret</root-password> 
   <source type="url">http://[UDA_IPADDR]/[OS]/[FLAVOR]</source>
  <!-- Uncomment the next line if you need a custom post-install script
    <post-install-script type="url"> http://[UDA_IPADDR]/kickstart/[TEMPLATE]/[SUBTEMPLATE].cfg<post-install-script
  -->
  <admin-interface name="eth0" proto="dhcp" />
  <timezone>Europe/London</timezone> 
</installation>
